# https://editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[{*.kt,*.kts}]
max_line_length = 100
indent_size = 4
ktlint_standard_filename = disabled

[*.md]
trim_trailing_whitespace = false
